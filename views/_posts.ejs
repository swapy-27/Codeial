<% if (locals.user){%>
    <ul id="posts-container">
        <% for(post of posts) { %>
            <li id="post-<%= post.id %>">
                <div>
                    <%= post.content %>
                        <small>
                            <%= post.user.name %>
                        </small>
                      
                            <a class="delete-post-button" href='/post/destroy/<%= post.id %>'>X</a>
                        <div>
                            <small>
                            <a href="/likes/toggle?id=<%= post.id %>&type=Post">Like</a>
                            <span>Count=<%= post.likes.length %></span>
                        </small>
                        </div>   
                </div>

                <div class="post-comments">
                    <form action="/comment/create" id="new-comment-form" method='post'>
                        <input type="text" name='content' placeholder="Type here to comment">
                        <input type="hidden" name='post' value=<%=post._id %>>
                        <input type="submit" value="Add comment">
                    </form>
                </div>
                <ul id="post-comments-<%= post._id%>">
                <%- include('_comment.ejs'); -%>
                </ul>
            </li>
            <% } %>
    </ul>
    <% } %>