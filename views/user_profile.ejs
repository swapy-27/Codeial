<link rel="stylesheet" href="/css/user_profile.css">

<div id="profile-section">
    <div class="background">
        <!-- <img src="../assets/images/Sasuke -cover pic.jpeg" type="image/avif" alt="Cover-Image"> -->
    </div>
    <div class="about">
        <div id="profile-pic">
            <!-- <img src=<%= user.avatar%> alt="profile-pic"> -->
        </div>
        <div class="user-name">
            <%= profile_user.name%>
        </div>
        <div class="bio">Amaterasu uchiha flame control </div>
        <p>
            <%=profile_user.email%>
        </p>
        <% if (user.id!=profile_user.id){%>
            <p class="info">
                <a href="/friends/<%= profile_user.id%>">Add Friend</a>
            </p>
            <%}%>
    </div>
    
    <div class="update-profile">
        <% if (user.id==profile_user.id){%>

            <form id="update-profile-form" action="/user/update/<%= profile_user.id%>" method="post" enctype="multipart/form-data">
                <input type="text" name="name" id="" placeholder="Enter name here..">
                <input type="email" name ="email" id="" placeholder="Enter email here..">
                 
                <!-- uploading profile pictures using multer -->
                <input type="file" name="avatar" />
                <input type="submit" value="Update">
            </form>

            <%}%>
    </div>
</div>